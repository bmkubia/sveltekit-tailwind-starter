{
    "name": "sveltekit-tailwind-starter",
    "description": "A barebones starter kit for SvelteKit and TailwindCSS that includes: TypeScript, Prettier, ESLint, PostCSS, and SASS.",
    "version": "0.0.1",
    "author": {
        "name": "Brett Kubiak",
        "url": "https://github.com/bmkubia",
        "email": "hi@bmkubia.dev"
    },
    "license": "MIT",
    "keywords": [
        "tailwindcss",
        "sveltekit",
        "svelte",
        "starter",
        "typescript",
        "prettier",
        "eslint",
        "postcss",
        "sass",
        "sveltekit starter",
        "tailwindcss starter",
        "sveltekit tailwindcss starter",
        "sveltekit-tailwind-starter"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bmkubia/sveltekit-tailwind-starter.git"
    },
    "scripts": {
        "dev": "svelte-kit dev",
        "dev:watch": "svelte-kit dev --watch",
        "dev:host": "svelte-kit dev --host",
        "dev:host:watch": "svelte-kit dev --host --watch",
        "build": "svelte-kit build",
        "package": "svelte-kit package",
        "preview": "svelte-kit preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js} && eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
        "lint:fix": "prettier --check ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js} && eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
        "format": "prettier --ignore-path .gitignore --write ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js}",
        "eslint": "eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
        "eslint:fix": "eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore . --fix"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "autoprefixer": "^10.4.0",
        "cssnano": "^5.0.12",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^3.2.1",
        "postcss": "^8.4.5",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.1",
        "sass": "^1.45.0",
        "svelte": "^3.44.0",
        "svelte-check": "^2.2.6",
        "svelte-preprocess": "^4.9.4",
        "tailwindcss": "^3.0.1",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3"
    },
    "type": "module"
}
